{
  "manifest_version": 3,
  "name": "OG Viewer",
  "version": "1.0",
  "description": "Instantly view and download the Open Graph (OG) image of any webpage.",
  "action": {
    "default_title": "OG Viewer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"]
}
